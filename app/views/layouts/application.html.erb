<!DOCTYPE html>
<html>
      <head>
        <title> <%=@page_title ? @page_title : 'Welcome'%> | The Traveller </title>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
        <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
        <%= csrf_meta_tags %>
        
      </head>
<!-- ------------------------------------------------------------>

      <body>
        
        <!-- BEGINING OF MAIN MENU-->
        <div> <!-- ***BEGINING OF  LEFT SIDE MAIN MENU***-->
                <nav class="navbar navbar-default navbar-fixed-top">
                    <div class="container">
                      <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                          <span class="sr-only">Toggle navigation</span>
                          <span class="icon-bar"></span>
                          <span class="icon-bar"></span>
                          <span class="icon-bar"></span>
                        </button>
                      
                      </div>
                      <div id="navbar" class="collapse navbar-collapse">
                        <ul class="nav navbar-nav">
                          <li class=<%= params[:controller] == 'tours'? 'active' :""%>><a <%=link_to 'Home', root_path%></li>
                          <li><%=link_to 'About', about_path%></li>
                           
                        </ul>
                      <!-- BEGINNING OF ENTIRE RIGHT SIDE OF MENU SECTION -->
                         <div id="navbar" class="collapse navbar-collapse">
                        
                        <!-- BEGINNING OF RIGHT SIDE 1st sub menu-->
                          <ul class="nav navbar-nav navbar-right" >
                              
                               <li><%=link_to 'Sign up', new_user_registration_path%></li>
                               <li><%=link_to 'Sing in', new_user_session_path%></li>
                               <li><%=link_to 'Sign out', destroy_user_session_path, :method => :delete %></li>
                              
    <!--END OF RIGHT SIDE 1st sub ------------------------------------------------------------>
                           
                        <!--BEGINNING of RIGHT SIDE DROP DOWN MENU -->



                           <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Add New <span class="caret"></span></a>
                                <ul class="dropdown-menu navbar-right" role="menu" >
                                  <li><%=link_to 'Tour', new_tour_path%></li>
                                  <li><%=link_to 'Category', new_category_path%></li>
                                  <li><%=link_to 'Places', new_place_path%></li>
                                </ul>
                            </li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Manage <span class="caret"></span></a>
                                <ul class="dropdown-menu navbar-right" role="menu" >
                                  <li><%=link_to 'Category',categories_path%></li>
                                  <li><%=link_to 'Places',places_path%></li>
                                </ul>
                            </li>
                        </ul>
                        
                      </div><!--/.nav-collapse, END OF DROPDOWN SUBMENU -->


                    </div>
                  </nav>
          <!--END OF NAVIGATION MENU-->
          
          </div>
          <header>
            <div class = "container">
              <h1> The Traveller <small><%=@page_title ? @page_title : 'Welcome'%> </small></h1>
            </div>
            
          </header>
          
      <section>
          <div class = "container">
            
               
              <div class ="row"> 
                  <div class ="col-md-8">
                    <!-- ALERT MESAGGES -->
                    
                          <% if flash[:notice] %>
                              <div class= "alert alert-success">
                              <%=flash[:notice]%>
                               
                              </div>
                          <%end%>
                     
                          
                          
                          <%if flash[:alert] %>
                             <div class= "alert alert-danger">
                              <%=flash[:alert]%>
                             
                          </div>
                        <%end%>
                        
                        
                      <%= yield %>
                  </div>
                  
                  <div class = "col-md-4">
                    <%= render "partials/sidebar"%>
                  </div>
                  
              </div>
          </div>
      </section>



       </div>
       
            <footer>
              
              <div class= "container">
                
                <p>Copyright &copy : 2016 All rights Reserved </p>
              </div>
              
            </footer>
      </body>
</html>
